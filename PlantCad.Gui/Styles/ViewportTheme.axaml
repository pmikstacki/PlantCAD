<Styles xmlns="https://github.com/avaloniaui">
  <!-- Shared styles for viewport HUD/popup controls -->
  <Style Selector="Button.viewport-action">
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="Padding" Value="8,4"/>
    <Setter Property="BorderBrush" Value="Transparent"/>
    <Setter Property="CornerRadius" Value="4"/>
  </Style>
  <Style Selector="Button.viewport-action:hover">
    <Setter Property="Opacity" Value="0.95"/>
  </Style>
  <Style Selector="Button.viewport-action:pressed">
    <Setter Property="Opacity" Value="0.9"/>
  </Style>
  <Style Selector="Button.viewport-action.primary">
    <Setter Property="Background" Value="#2ecc71"/>
  </Style>
  <Style Selector="Button.viewport-action.danger">
    <Setter Property="Background" Value="#e74c3c"/>
  </Style>
  <Style Selector="Button.viewport-action.info">
    <Setter Property="Background" Value="#3498db"/>
  </Style>
  <Style Selector="Button.viewport-action.violet">
    <Setter Property="Background" Value="#9b59b6"/>
  </Style>
</Styles>
