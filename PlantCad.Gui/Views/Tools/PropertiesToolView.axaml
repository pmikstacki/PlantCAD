<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PlantCad.Gui.ViewModels.Tools"
             xmlns:apc="clr-namespace:Avalonia.PropertyGrid.Controls;assembly=Avalonia.PropertyGrid"
             x:Class="PlantCad.Gui.Views.Tools.PropertiesToolView"
             x:DataType="vm:PropertiesToolViewModel">
  <DockPanel Margin="8">
    <TextBlock DockPanel.Dock="Top"
               Text="{Binding SelectionTitle}"
               FontWeight="Bold"
               Margin="0,0,0,8"/>
    <apc:PropertyGrid NameWidth="180"
                      MinHeight="120"
                      DataContext="{Binding SelectedObject}"/>
  </DockPanel>
</UserControl>
