<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vp="using:PlantCad.Gui.Controls.Viewport"
             x:Class="PlantCad.Gui.Controls.Viewport.ViewportPanel"
             x:DataType="vp:ViewportPanel"
             x:Name="Root">
  <UserControl.DataContext>
    <Binding RelativeSource="{RelativeSource Self}"/>
  </UserControl.DataContext>
  <UserControl.Styles>
    <Style Selector="UserControl#Root">
      <Setter Property="Padding" Value="8"/>
      <Setter Property="Background" Value="#B3000000"/> <!-- translucent black -->
    </Style>
    <Style Selector="Button.viewport-action">
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="Padding" Value="8,4"/>
      <Setter Property="BorderBrush" Value="Transparent"/>
      <Setter Property="CornerRadius" Value="4"/>
    </Style>
    <Style Selector="Button.viewport-action:hover">
      <Setter Property="Opacity" Value="0.95"/>
    </Style>
    <Style Selector="Button.viewport-action:pressed">
      <Setter Property="Opacity" Value="0.9"/>
    </Style>
    <Style Selector="Button.viewport-action.primary">
      <Setter Property="Background" Value="#2ecc71"/>
    </Style>
    <Style Selector="Button.viewport-action.danger">
      <Setter Property="Background" Value="#e74c3c"/>
    </Style>
    <Style Selector="Button.viewport-action.info">
      <Setter Property="Background" Value="#3498db"/>
    </Style>
    <Style Selector="Button.viewport-action.violet">
      <Setter Property="Background" Value="#9b59b6"/>
    </Style>
  </UserControl.Styles>
  <Border CornerRadius="8" Background="{Binding Background, RelativeSource={RelativeSource AncestorType=UserControl}}">
    <DockPanel LastChildFill="True">
      <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Spacing="6" VerticalAlignment="Center">
        <ContentPresenter Width="18" Height="18" Content="{Binding Icon}"/>
        <TextBlock FontWeight="Bold" Text="{Binding Header}"/>
      </StackPanel>
      <ContentPresenter Content="{Binding Content}"/>
    </DockPanel>
  </Border>
</UserControl>
